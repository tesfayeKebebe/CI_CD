            </div>
            <div onclick="@(() => Show(3))" class="@(SettingTabIndex == 3 ? "sub-main-tab-item sub-main-tab-item-active" : "sub-main-tab-item")">
                <div class="sub-main-tab-text">Sample Type</div>
            </div>
            <div onclick="@(() => Show(4))" class="@(SettingTabIndex == 4 ? "sub-main-tab-item sub-main-tab-item-active" : "sub-main-tab-item")">
                <div class="sub-main-tab-text">Tube Type</div>
            </div>
            <div onclick="@(() => Show(5))" class="@(SettingTabIndex == 5 ? "sub-main-tab-item sub-main-tab-item-active" : "sub-main-tab-item")">
                <div class="sub-main-tab-text">Test</div>
            </div>
            <div onclick="@(() => Show(6))" class="@(SettingTabIndex == 6 ? "sub-main-tab-item sub-main-tab-item-active" : "sub-main-tab-item")">
