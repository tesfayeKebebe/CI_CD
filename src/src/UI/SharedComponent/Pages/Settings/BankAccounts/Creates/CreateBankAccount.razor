
@using SharedComponent.Server.Models.BankAccounts
@inherits CreateBankAccountBase
<RadzenTemplateForm TItem="BankAccount" Data="Model" Submit="@OnSave" >
    @if (IsSpinner)
    {
        <div class="spinner"> </div>
    }
    <div class="flex-row ">
        <div class="flex-col col-Padding">
            <div class="label">Name</div>
            <RadzenTextBox Name="name" @bind-Value="Model.Name" Style="width: 100%;"></RadzenTextBox>
            <div class="flex-row">
                <div class="flex-col col-Padding">
                    <RadzenRequiredValidator Component="name" Text="Name is required"></RadzenRequiredValidator>
                </div>
            </div>
        </div>
    </div>
    <div class="flex-row  m-bottom">
        <div class="flex-col col-Padding">
            <div class="label">Account</div>
            <RadzenNumeric Name="account" @bind-Value="Model.Account" Style="width: 100%;"></RadzenNumeric>
            <div class="flex-row">
                <div class="flex-col col-Padding">
                    <RadzenRequiredValidator Component="account" Text="Account is required"></RadzenRequiredValidator>
                </div>
            </div>
        </div>
    </div>
    <div class="flex-row">              
        <div class="flex-col col-Padding">
            <span class="between-text-reset" onclick="@OnReset"> <img class="text-with-button" src="_content/SharedComponent/images/reset.png" alt=""/>Reset</span>
        </div>
        <div class="flex-col col-Padding text-align-end">
            <span class="between-text-primary" ><button type="submit"><img class="text-with-button" src="_content/SharedComponent/images/save.png" alt=""/>Submit</button> </span>
        </div>
        
    </div>

</RadzenTemplateForm>