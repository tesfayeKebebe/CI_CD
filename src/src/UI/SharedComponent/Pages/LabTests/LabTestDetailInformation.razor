@inherits LabTestDetailInformationBase
@if (LabTestDetail != null)
{
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            <span style="font-weight: 700">Test:</span> @LabTestDetailViewModel.Name
        </div>
    </div>
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            @if (LabTestDetail.SampleType != null)
            {
                  <span style="font-weight: 700">Sample Type:</span> @LabTestDetail.SampleType
            }
        </div>
    </div>
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            @if (LabTestDetail.TubeType != null)
            {
                <div class="label">
                  <span style="font-weight: 700">Tube Type :</span>  @LabTestDetail.TubeType
                </div>
            }
        </div>
    </div>
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
              <div class="label"><span style="font-weight: 700">Description:</span>  @LabTestDetail.Description</div>
        </div>
    </div>
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            Is Fasting Required <RadzenCheckBox TValue="bool" @bind-Value="@LabTestDetail.IsFastingRequired" Disabled="true" style="padding-left: 10px"></RadzenCheckBox>
        </div>
    </div>
}