@inherits PatientFileDisplayBase
@if (Data != null)
{
    <div class="flex-row ">
        <div class="flex-col col-Padding">
            <div class="label">Name:@File?.PatientName </div>
        </div>
    </div>
    <div class="flex-row ">
        <div class="flex-col col-Padding">
            <div class="label">Phone:@File?.PhoneNumber </div>
        </div>
    </div>
    foreach (var data in Data)
    {
        var url =Url + data.StoredFileName;
        if (data.ContentType == "application/pdf")
        {
            <embed src="@url" type="@data.ContentType" style="width:100%; height:800px" /> 
        }
        else
        {
            <img src="@url" alt="" style="width:100%; height:800px"/>
        }

    }
}