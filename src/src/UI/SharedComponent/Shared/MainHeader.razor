@using SharedComponent.Shared;

@inherits MainHeaderBase
<div class="main-header">
        <div class="flex-row-header">
            <div class="flex-grow-1" style="width:100%">
                <div class="flex-row" style="padding: 8px 10px 0 10px;">
                    <div class="flex-grow">
                        <img class="logo-image" src="health.png" alt=""/><span style="font-weight:700"> Get well soon</span>
                    </div>
                    <div class="flex-grow" style="text-align: end">
                        @if (!IsAuthenticated)
                        {
                            <span class="main-tab-text" style="padding-right: 5px;font-weight:700" onclick="@Login">Login</span>
                        }
                        @if (IsAuthenticated)
                        {
                            <span style="padding-right: 5px; font-weight:700"> @UserName</span>  <span style="padding-right: 5px;" onclick="@OnAccount">  <img class="button-image" src="_content/SharedComponent/images/user.png" alt=""/></span>
                        }
                    </div>
                </div>
            </div>
        </div>
    <div class="sub-main-tab">
        <div class="sub-main-tab-items">
               @if (!IsAuthenticated)
               {
               }
               @if (IsAuthenticated)
               {
                   <div onclick="@(() => Show(0))" class="main-tab-item fadeIn animated">
                       <div class="@(HeaderTabIndex == 0 ? "main-tab-text  main-tab-text-active" : "main-tab-text")">
                       </div>
                   </div>
                   <div onclick="@(() => Show(1))" class="main-tab-item fadeIn animated">
                       <div class="@(HeaderTabIndex == 1 ? "main-tab-text  main-tab-text-active" : "main-tab-text")">
                           Lab Tests
                       </div>
                   </div>
                   <AuthorizeView Roles="administrator, supervisor, HealthOfficer, LaboratoryTechnologist">
                       <div onclick="@(() => Show(8))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 8 ? "main-tab-text  main-tab-text-active" : "main-tab-text")">
                               Patient Files
                               @if (@PatientFile > 0)
                               {
                                   <span style="color: red">(@PatientFile)</span>
                               }

                           </div>
                       </div>
                   </AuthorizeView>
                   <AuthorizeView Roles="administrator, supervisor">
                       <div onclick="@(() => Show(3))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 3 ? "main-tab-text main-tab-text-active" : "main-tab-text")">
                               Draft
                               @if (@Draft > 0)
                               {
                                   <span style="color: red">(@Draft)</span>
                               }
                           </div>
                       </div>
                   </AuthorizeView>

                   <AuthorizeView Roles="administrator, supervisor, HealthOfficer,LaboratoryTechnologist">
                       <div onclick="@(() => Show(4))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 4 ? "main-tab-text main-tab-text-active" : "main-tab-text")">
                               On Progress
                               @if (@Progress > 0)
                               {
                                   <span style="color: red">(@Progress)</span>
                               }
                           </div>
                       </div>
                   </AuthorizeView>
                   <AuthorizeView Roles="administrator, supervisor">
                       <div onclick="@(() => Show(5))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 5 ? "main-tab-text main-tab-text-active" : "main-tab-text")">Completed</div>
                       </div>
                   </AuthorizeView>

                   <AuthorizeView Roles="administrator, supervisor">
                       <div onclick="@(() => Show(6))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 6 ? "main-tab-text main-tab-text-active" : "main-tab-text")">Setting</div>
                       </div>
                   </AuthorizeView>
                   <AuthorizeView Roles="administrator, supervisor">
                       <div onclick="@(() => Show(7))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 7 ? "main-tab-text main-tab-text-active" : "main-tab-text")">Account Setting</div>
                       </div>
                   </AuthorizeView>
                   <AuthorizeView Roles="administrator, supervisor">
                       <div onclick="@(() => Show(9))" class="main-tab-item fadeIn animated">
                           <div class="@(HeaderTabIndex == 9 ? "main-tab-text main-tab-text-active" : "main-tab-text")">Info</div>
                       </div>
                   </AuthorizeView>
               }
        </div>
    </div>
</div>


     