@using RazorShared.Server.Models.UserAssigns
@inherits CreateUserAssignBase
<RadzenTemplateForm TItem="UserAssign" Data="Model" >
            <div class="flex-row">
                <div class="flex-col col-Padding">
                    <div class="label">User</div>
                    <RadzenDropDown Data="ApplicationUsers"  Name="userId" @bind-Value="Model.UserId" AllowClear="true" AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    TextProperty="FullName" ValueProperty="Id" Style="width: 100%;"/>
                    <div class="flex-row">
                        <div class="flex-col col-Padding">
                            <RadzenRequiredValidator Component="userId" Text="User is required"></RadzenRequiredValidator>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex-row">
                <div class="flex-col col-Padding">
                    <div class="label">Branch</div>
                    <RadzenDropDown Data="BranchDetails"  Name="userBranchId" @bind-Value="Model.UserBranchId" AllowClear="true" AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    TextProperty="Name" ValueProperty="Id" Style="width: 100%;"/>
                    <div class="flex-row">
                        <div class="flex-col col-Padding">
                            <RadzenRequiredValidator Component="userBranchId" Text="Branch is required"></RadzenRequiredValidator>
                        </div>
                    </div>
                </div>
            </div>
           <div class="flex-row">
              <div class="flex-col col-Padding">
                  <span class="between-text-reset" onclick="@OnReset"> <img class="text-with-button" src="_content/RazorShared/images/reset.png" alt=""/>Reset</span>
              </div>
              <div class="flex-col col-Padding text-align-end">
                  <span class="between-text-primary" onclick="@OnSave"> <img class="text-with-button" src="_content/RazorShared/images/save.png" alt=""/>Submit</span>
              </div>
    </div>

</RadzenTemplateForm>