@using Microsoft.AspNetCore.Components
@using Web.UI.Server.Models.Categories
@using Web.UI.Server.Models.Sample_Type
@inherits EditSampleTypeBase
<RadzenTemplateForm TItem="SampleTypeDetail" Data="model" Submit="@OnSave">
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            <div class="label">Name</div>
            <RadzenTextBox Name="name" @bind-Value="model.Name" Style="width: 100%;"></RadzenTextBox>
            <div class="flex-row">
                <div class="flex-col col-Padding">
                    <RadzenRequiredValidator Component="name" Text="Name is required"></RadzenRequiredValidator>
                </div>
            </div>
        </div>
    </div>
    <div class="flex-row m-bottom">
        <div class="flex-col col-Padding">
            Is Active  <RadzenCheckBox TValue="bool" @bind-Value="model.IsActive" style="padding-left: 10px"></RadzenCheckBox>
        </div>
    </div>
    <div class="flex-row">
        <div class="flex-col">
            <RadzenButton ButtonType="ButtonType.Reset" Text="Reset" ButtonStyle="ButtonStyle.Danger" Click="OnReset"></RadzenButton>
        </div>
        <div class="flex-col">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Submit" ButtonStyle="ButtonStyle.Success"></RadzenButton>
        </div>
    </div>

</RadzenTemplateForm>